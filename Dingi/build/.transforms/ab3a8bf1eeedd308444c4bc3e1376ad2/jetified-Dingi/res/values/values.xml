<?xml version="1.0" encoding="utf-8"?>
<resources>
    <color name="dingi_blue">#1E8CAB</color>
    <color name="dingi_gray">#7D7F80</color>
    <color name="dingi_gray_dark">#5F5F5F</color>
    <color name="dingi_location_layer_blue">#4A90E2</color>
    <color name="dingi_location_layer_gray">#A1B0C0</color>
    <declare-styleable name="dingi_BubbleLayout">
        <attr format="dimension|reference" name="dingi_bl_arrowWidth"/>
        <attr format="dimension|reference" name="dingi_bl_cornersRadius"/>
        <attr format="dimension|reference" name="dingi_bl_arrowHeight"/>
        <attr format="dimension|reference" name="dingi_bl_arrowPosition"/>
        <attr format="color|reference" name="dingi_bl_bubbleColor"/>
        <attr format="dimension|reference" name="dingi_bl_strokeWidth"/>
        <attr format="color|reference" name="dingi_bl_strokeColor"/>

        <attr format="enum" name="dingi_bl_arrowDirection">
            <enum name="left" value="0"/>
            <enum name="right" value="1"/>
            <enum name="top" value="2"/>
            <enum name="bottom" value="3"/>
        </attr>
    </declare-styleable>
    <declare-styleable name="dingi_LocationComponent">
        <attr format="reference" name="dingi_foregroundDrawable"/>
        <attr format="color" name="dingi_foregroundTintColor"/>
        <attr format="reference" name="dingi_backgroundDrawable"/>
        <attr format="color" name="dingi_backgroundTintColor"/>
        <attr format="reference" name="dingi_bearingDrawable"/>
        <attr format="color" name="dingi_bearingTintColor"/>
        <attr format="reference" name="dingi_gpsDrawable"/>

        <attr format="reference" name="dingi_foregroundDrawableStale"/>
        <attr format="color" name="dingi_foregroundStaleTintColor"/>
        <attr format="reference" name="dingi_backgroundDrawableStale"/>
        <attr format="color" name="dingi_backgroundStaleTintColor"/>

        <attr format="float" name="dingi_accuracyAlpha"/>
        <attr format="color" name="dingi_accuracyColor"/>

        <attr format="dimension" name="dingi_elevation"/>

        <!-- Stale state -->
        <attr format="boolean" name="dingi_enableStaleState"/>
        <attr format="integer" min="0" name="dingi_staleStateTimeout"/>

        <!-- Location icon padding -->
        <attr format="integer" name="dingi_iconPaddingLeft"/>
        <attr format="integer" name="dingi_iconPaddingTop"/>
        <attr format="integer" name="dingi_iconPaddingRight"/>
        <attr format="integer" name="dingi_iconPaddingBottom"/>

        <!-- Map layer configuration -->
        <attr format="string" name="dingi_layer_below"/>

        <!-- Map zoom levels -->
        <attr format="float" name="dingi_maxZoom"/>
        <attr format="float" name="dingi_minZoom"/>

        <!-- Icon scale based on map zoom levels -->
        <attr format="float" name="dingi_maxZoomIconScale"/>
        <attr format="float" name="dingi_minZoomIconScale"/>

        <!-- Camera tracking settings -->
        <attr format="boolean" name="dingi_trackingGesturesManagement"/>
        <attr format="dimension" name="dingi_trackingInitialMoveThreshold"/>
        <attr format="dimension" name="dingi_trackingMultiFingerMoveThreshold"/>

        <!-- Animation duration multiplier -->
        <attr format="float" name="dingi_trackingAnimationDurationMultiplier"/>

    </declare-styleable>
    <declare-styleable name="dingi_MapView">

        <!--Configuration-->
        <attr format="string" name="dingi_styleUrl"/>
        <attr format="string" name="dingi_styleJson"/>
        <attr format="string" name="dingi_apiBaseUrl"/>
        <attr format="string" name="dingi_localIdeographFontFamily"/>
        <attr format="boolean" name="dingi_cross_source_collisions"/>

        <!--Camera-->
        <attr format="float" name="dingi_cameraTargetLat"/>
        <attr format="float" name="dingi_cameraTargetLng"/>
        <attr format="float" name="dingi_cameraZoom"/>
        <attr format="float" name="dingi_cameraBearing"/>
        <attr format="float" name="dingi_cameraTilt"/>

        <!--Zoom-->
        <attr format="float" name="dingi_cameraZoomMax"/>
        <attr format="float" name="dingi_cameraZoomMin"/>

        <!--Gestures-->
        <attr format="boolean" name="dingi_uiZoomGestures"/>
        <attr format="boolean" name="dingi_uiScrollGestures"/>
        <attr format="boolean" name="dingi_uiRotateGestures"/>
        <attr format="boolean" name="dingi_uiTiltGestures"/>
        <attr format="boolean" name="dingi_uiDoubleTapGestures"/>

        <!--Compass-->
        <attr format="boolean" name="dingi_uiCompass"/>
        <attr name="dingi_uiCompassGravity">
            <flag name="top" value="0x30"/>
            <flag name="bottom" value="0x50"/>
            <flag name="left" value="0x03"/>
            <flag name="right" value="0x05"/>
            <flag name="center_vertical" value="0x10"/>
            <flag name="fill_vertical" value="0x70"/>
            <flag name="center_horizontal" value="0x01"/>
            <flag name="fill_horizontal" value="0x07"/>
            <flag name="center" value="0x11"/>
            <flag name="fill" value="0x77"/>
            <flag name="clip_vertical" value="0x80"/>
            <flag name="clip_horizontal" value="0x08"/>
            <flag name="start" value="0x00800003"/>
            <flag name="end" value="0x00800005"/>
        </attr>
        <attr format="dimension" name="dingi_uiCompassMarginLeft"/>
        <attr format="dimension" name="dingi_uiCompassMarginTop"/>
        <attr format="dimension" name="dingi_uiCompassMarginRight"/>
        <attr format="dimension" name="dingi_uiCompassMarginBottom"/>
        <attr format="boolean" name="dingi_uiCompassFadeFacingNorth"/>
        <attr format="reference" name="dingi_uiCompassDrawable"/>

        <!--Logo-->
        <attr format="boolean" name="dingi_uiLogo"/>
        <attr name="dingi_uiLogoGravity">
            <flag name="top" value="0x30"/>
            <flag name="bottom" value="0x50"/>
            <flag name="left" value="0x03"/>
            <flag name="right" value="0x05"/>
            <flag name="center_vertical" value="0x10"/>
            <flag name="fill_vertical" value="0x70"/>
            <flag name="center_horizontal" value="0x01"/>
            <flag name="fill_horizontal" value="0x07"/>
            <flag name="center" value="0x11"/>
            <flag name="fill" value="0x77"/>
            <flag name="clip_vertical" value="0x80"/>
            <flag name="clip_horizontal" value="0x08"/>
            <flag name="start" value="0x00800003"/>
            <flag name="end" value="0x00800005"/>
        </attr>
        <attr format="dimension" name="dingi_uiLogoMarginLeft"/>
        <attr format="dimension" name="dingi_uiLogoMarginTop"/>
        <attr format="dimension" name="dingi_uiLogoMarginRight"/>
        <attr format="dimension" name="dingi_uiLogoMarginBottom"/>

        <!--Attribution-->
        <attr format="boolean" name="dingi_uiAttribution"/>
        <attr name="dingi_uiAttributionGravity">
            <flag name="top" value="0x30"/>
            <flag name="bottom" value="0x50"/>
            <flag name="left" value="0x03"/>
            <flag name="right" value="0x05"/>
            <flag name="center_vertical" value="0x10"/>
            <flag name="fill_vertical" value="0x70"/>
            <flag name="center_horizontal" value="0x01"/>
            <flag name="fill_horizontal" value="0x07"/>
            <flag name="center" value="0x11"/>
            <flag name="fill" value="0x77"/>
            <flag name="clip_vertical" value="0x80"/>
            <flag name="clip_horizontal" value="0x08"/>
            <flag name="start" value="0x00800003"/>
            <flag name="end" value="0x00800005"/>
        </attr>
        <attr format="dimension" name="dingi_uiAttributionMarginLeft"/>
        <attr format="dimension" name="dingi_uiAttributionMarginTop"/>
        <attr format="dimension" name="dingi_uiAttributionMarginRight"/>
        <attr format="dimension" name="dingi_uiAttributionMarginBottom"/>
        <attr format="color" name="dingi_uiAttributionTintColor"/>

        <!-- Use TextureView-->
        <attr format="boolean" name="dingi_renderTextureMode"/>
        <attr format="boolean" name="dingi_renderTextureTranslucentSurface"/>
        <attr format="color" name="dingi_foregroundLoadColor"/>

        <attr format="boolean" name="dingi_enableTilePrefetch"/>
        <attr format="boolean" name="dingi_enableZMediaOverlay"/>
        <attr format="float" name="dingi_pixelRatio"/>

    </declare-styleable>
    <dimen name="dingi_defaultScaleSpanSinceStartThreshold">400dp</dimen>
    <dimen name="dingi_eight_dp">8dp</dimen>
    <dimen name="dingi_four_dp">4dp</dimen>
    <dimen name="dingi_infowindow_margin">8dp</dimen>
    <dimen name="dingi_infowindow_tipview_width">8dp</dimen>
    <dimen name="dingi_locationComponentTrackingInitialMoveThreshold">25dp</dimen>
    <dimen name="dingi_locationComponentTrackingMultiFingerMoveThreshold">400dp</dimen>
    <dimen name="dingi_minimum_angular_velocity">0.025dp</dimen>
    <dimen name="dingi_minimum_scale_span_when_rotating">100dp</dimen>
    <dimen name="dingi_minimum_scale_velocity">150dp</dimen>
    <dimen name="dingi_my_locationview_outer_circle">18dp</dimen>
    <dimen name="dingi_ninety_two_dp">92dp</dimen>
    <string name="dingi_attributionErrorNoBrowser">No web browser installed on device, can\'t open web page.</string>
    <string name="dingi_attributionTelemetryMessage">You are helping to make OpenStreetMap and Dingi maps better by contributing anonymous usage data.</string>
    <string name="dingi_attributionTelemetryNegative">Disagree</string>
    <string name="dingi_attributionTelemetryNeutral">More info</string>
    <string name="dingi_attributionTelemetryPositive">Agree</string>
    <string name="dingi_attributionTelemetryTitle">Make Dingi Maps Better</string>
    <string name="dingi_attributionsDialogTitle">Dingi Maps SDK for Android</string>
    <string name="dingi_attributionsIconContentDescription">Attribution icon. Activate to show attribution dialog.</string>
    <string name="dingi_bangla" translatable="false">http://tilesv3.dingi.live/styles/Combined-Bangla/style.json</string>
    <string name="dingi_compassContentDescription">Map compass. Activate to reset the map rotation to North.</string>
    <string name="dingi_english" translatable="false">http://tilesv3.dingi.live/styles/Combined/style.jso</string>
    <string name="dingi_mapActionDescription">Showing a Map created with Dingi. Scroll by dragging two fingers. Zoom by pinching two fingers.</string>
    <string name="dingi_myLocationViewContentDescription">Location View. This shows your location on the map.</string>
    <string name="dingi_offline_error_region_definition_invalid">Provided OfflineRegionDefinition doesn\'t fit the world bounds: %s</string>
    <string name="dingi_style_dark" translatable="false">mapbox://styles/mapbox/dark-v9</string>
    <string name="dingi_style_dingi_streets" translatable="false">mapbox://styles/mapbox/streets-v10</string>
    <string name="dingi_style_light" translatable="false">mapbox://styles/mapbox/light-v9</string>
    <string name="dingi_style_outdoors" translatable="false">mapbox://styles/mapbox/outdoors-v10</string>
    <string name="dingi_style_satellite" translatable="false">mapbox://styles/mapbox/satellite-v9</string>
    <string name="dingi_style_satellite_streets" translatable="false">mapbox://styles/mapbox/satellite-streets-v10</string>
    <string name="dingi_style_traffic_day" translatable="false">mapbox://styles/mapbox/traffic-day-v2</string>
    <string name="dingi_style_traffic_night" translatable="false">mapbox://styles/mapbox/traffic-night-v2</string>
    <string name="dingi_telemetryImproveMap">Improve Dingi Map</string>
    <string name="dingi_telemetryLink" translatable="false">https://www.mapbox.com/telemetry/</string>
    <string name="dingi_telemetrySettings">Telemetry Settings</string>
    <style name="dingi_LocationComponent">
    <item name="dingi_foregroundDrawable">@drawable/dingi_user_icon</item>
    <item name="dingi_backgroundDrawable">@drawable/dingi_user_stroke_icon</item>
    <item name="dingi_bearingDrawable">@drawable/dingi_user_bearing_icon</item>
    <item name="dingi_gpsDrawable">@drawable/dingi_user_puck_icon</item>

    <item name="dingi_foregroundDrawableStale">@drawable/dingi_user_icon_stale</item>
    <item name="dingi_backgroundDrawableStale">@drawable/dingi_user_stroke_icon</item>

    <item name="dingi_accuracyAlpha">0.15</item>
    <item name="dingi_accuracyColor">@color/dingi_location_layer_blue</item>

    <item name="dingi_elevation">12dp</item>

    <item name="dingi_enableStaleState">true</item>
    <item name="dingi_staleStateTimeout">30000</item>

    <!-- Location icon padding -->
    <item name="dingi_iconPaddingLeft">0</item>
    <item name="dingi_iconPaddingTop">0</item>
    <item name="dingi_iconPaddingRight">0</item>
    <item name="dingi_iconPaddingBottom">0</item>

    <!-- Map zoom levels -->
    <item name="dingi_maxZoom">18</item>
    <item name="dingi_minZoom">2</item>

    <!-- Location icon scale based on map zoom levels -->
    <item name="dingi_maxZoomIconScale">1</item>
    <item name="dingi_minZoomIconScale">0.6</item>

    <!-- Camera tracking settings -->
    <item name="dingi_trackingGesturesManagement">false</item>
    <item name="dingi_trackingInitialMoveThreshold">@dimen/dingi_locationComponentTrackingInitialMoveThreshold</item>
    <item name="dingi_trackingMultiFingerMoveThreshold">@dimen/dingi_locationComponentTrackingMultiFingerMoveThreshold</item>

  </style>
</resources>