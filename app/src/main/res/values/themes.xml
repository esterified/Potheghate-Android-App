<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.PotheGhate" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!--Theme.AppCompat.Light.NoActionBar-->
        <!--Theme.MaterialComponents.DayNight.NoActionBar-->
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/p_red</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/p_red</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/purple_200</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- navigation icon -->
        <item name="android:navigationIcon">@drawable/nav_icon</item>
        <item name="android:homeAsUpIndicator">@drawable/ic_baseline_arrow_back_ios_new_24</item>
        <item name="android:actionMenuTextColor">@color/white</item>
        <item name="errorTextColor">@color/p_red</item>
        <item name="android:textColorLink">@color/p_red</item>

        <!--window transition-->
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowAnimationStyle">@style/CustomActivityAnimation</item>

        <!-- Customize your theme here. -->
    </style>


</resources>