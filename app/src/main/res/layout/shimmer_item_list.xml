<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:layout_height="120dp"
    app:cardCornerRadius="10dp"
    app:cardElevation="10dp"
    android:layout_margin="5dp"
    android:id="@+id/cardRoot1_S"

    >
    <RelativeLayout
        android:layout_width="match_parent" android:layout_height="match_parent"

        >

        <ImageView
            android:id="@+id/imageViewList1_S"
            android:layout_width="140dp"
            android:layout_height="120dp"
            android:layout_alignParentStart="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:background="#E7E7E7"
            android:contentDescription="@string/shopimage" />



        <RelativeLayout
            android:id="@+id/rel1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toEndOf="@id/imageViewList1_S"
            android:layout_toStartOf="@id/rel2_S"



            >


            <TextView
                android:id="@+id/listName_S"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_margin="10dp"
                android:background="#E7E7E7"
                android:textColor="@color/content_text_color" />

            <TextView
                android:id="@+id/listPrice_S"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/listName_S"
                android:layout_marginStart="10dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:background="#E7E7E7"
                android:textColor="@color/content_text_color" />


        </RelativeLayout>
        <LinearLayout

            android:id="@+id/rel2_S"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_alignParentEnd="true"
            android:gravity="center"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            >


            <Button
                android:id="@+id/buttonList_S"
                android:backgroundTint="#E7E7E7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxWidth="40dp"
                android:padding="0dp"
                android:textAllCaps="false"

                android:elevation="6dp"
                />
        </LinearLayout>

    </RelativeLayout>
</androidx.cardview.widget.CardView>